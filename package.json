    "rxjs": "5.5.2",
    "sw-toolbox": "3.6.0",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@angular/compiler-cli": "5.2.10",
    "@ionic/app-scripts": "3.1.8",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.106",
    "dotenv-safe": "^5.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-preset-angular": "^5.2.1",
