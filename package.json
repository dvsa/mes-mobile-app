{
  "name": "mobile-examiner-alpha",
  "version": "0.0.1",
  "description": "DVSA Mobile Examiner Services (GDS Alpha phase)",
  "author": "DVSA",
  "homepage": "https://github.com/dvsa/mobile-examiner-alpha",
  "private": true,
  "scripts": {
    "clean": "ionic-app-scripts clean",
    "build": "ionic-app-scripts build",
    "lint": "ionic-app-scripts lint",
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve",
    "ionic:deploy": "git push ionic master",
    "format:fix": "pretty-quick --staged",
    "format:all": "npx prettier --write \"src/**/*{.ts,.js,.json,.css,.scss}\"",
    "precommit": "run-s format:fix lint",
    "prepush": "run-s format:fix lint test gitSecrets scanRepo",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "gitSecrets": "git secrets --scan",
    "scanRepo": "git log -p -n 15 | scanrepo"
  },
  "dependencies": {
    "@angular-redux/store": "^7.1.1",
    "@angular/common": "5.2.10",
